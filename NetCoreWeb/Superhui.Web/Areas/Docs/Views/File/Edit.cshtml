@model Blog
@{
    ViewData["Title"] = "Simple";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <title>Simple example - Editor.md examples</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/editor-md/examples/css/style.css" />
    <link rel="stylesheet" href="~/lib/editor-md/css/editormd.css" />
    <link rel="shortcut icon" href="https://pandao.github.io/editor.md/favicon.ico" type="image/x-icon" />
</head>
<body>
    <div id="layout">
        <header>
            <h1>修改 blog</h1>
        </header>
        <form method="post">
            <input type="hidden" asp-for="BlogID" />

            <div id="test-editormd">
                <textarea style="display:none;" asp-for="Content"></textarea>
            </div>
            <div style="margin-left:100px;">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" />
                </div>
                <div class="form-group" style="width:90%;">
                    <input type="submit" name="submit" value="保存" style="padding: 5px;" />
                </div>
            </div>
        </form>
    </div>
    <script src="~/lib/editor-md/examples/js/jquery.min.js"></script>
    <script src="~/lib/editor-md/editormd.min.js"></script>
    <script type="text/javascript">
        var testEditor;

        $(function () {
            testEditor = editormd("test-editormd", {
                width: "90%",
                height: 640,
                syncScrolling: "single",
                path: "/lib/editor-md/lib/editor-md/../../lib/",
                //appendMarkdown: md,
                saveHTMLToTextarea: true
            });


        });
    </script>
</body>
</html>

